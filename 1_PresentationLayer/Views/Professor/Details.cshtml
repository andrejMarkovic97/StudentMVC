@model _1_PresentationLayer.ViewModels.ProfessorViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@using (Html.BeginForm("Edit", "Professor"))
{
    @Html.AntiForgeryToken()
    <div>
        <h4>Professor Details</h4>
        <hr />
        <<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UserID)
    @Html.Partial("_EditStudent")
    @Html.Partial("_EditProfessor")
    @{
        if (!Model.IsDisabled)
        {

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <button type="submit" class="btn btn-primary" @ViewBag.disabled>
                    Submit
                </button>
            </div>
        </div>
            }
        }
</div>



    </div>
    <div>
        <button type="button" class="btn btn-default active" onclick="location.href='@Url.Action("Edit", "Professor", new { id = Model.UserID })'">Edit</button>

        <button type="button" class="btn btn-default active" onclick="location.href='@Url.Action("Index", "Professor")'">Back to list</button>
    </div>
    

}