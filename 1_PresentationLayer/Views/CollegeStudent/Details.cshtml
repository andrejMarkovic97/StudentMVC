@model _1_PresentationLayer.ViewModels.CollegeStudentViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>


<h4>CollegeStudent</h4>
@using (Html.BeginForm("Edit", "CollegeStudent"))
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserID)
            @Html.Partial("_EditStudent")
            @Html.Partial("_EditCollegeStudent")


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @{
                        if (!Model.IsDisabled)
                        {
                            <input class="btn btn-primary" type="submit" value="Submit">

                        }
                    }
                    <button type="button" class="btn btn-default active" onclick="location.href='@Url.Action("Export", "CollegeStudent",new { id = Model.UserID })'">Export</button>

                    <button type="button" class="btn btn-default active" onclick="location.href='@Url.Action("Edit", "CollegeStudent", new { id = Model.UserID })'">Edit</button>
                    @if (User.IsInRole("Professor"))
                    {
                        <button type="button" class="btn btn-default active" onclick="location.href='@Url.Action("Index", "CollegeStudent")'">Back to list</button>
                    }
                </div>
            </div>


        </div>



    </div>
}
@TempData["ErrorValidate"]
<p>



    <div>
        <b>
            @TempData["ExportMessage"]
        </b>
    </div>
</p>

<script src="~/Scripts/scripts.js">

</script>
