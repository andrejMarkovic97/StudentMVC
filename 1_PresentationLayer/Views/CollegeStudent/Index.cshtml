@model IEnumerable<_4_BusinessObjectModel.Models.CollegeStudent>

@{
    ViewBag.Title = "Index";
}
<link href="..\Content\Styles.css" rel="stylesheet">
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "CollegeStudent", FormMethod.Get))
{

    @Html.TextBox("filter")
    <input type="submit" value="Search"  />
    

}

@TempData["ErrorSearch"]

<table class="table table-hover table-striped">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
           Birth Date
        </th>
        <th>
           Email
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Adress
        </th>
        <th>
            Institution Name
        </th>
        <th>
            Generation
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.InstitutionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Generation)
            </td>
            <td>
                <div class="outer">
                    <div class="inner">
                    <button type="button" class="btn btn-primary p-2" onclick="location.href='@Url.Action("Details", "CollegeStudent", new { id = item.ID })'">Details</button>
                    </div>
                    <div class="inner">
                        <button type="button" data-toggle="modal" data-target="#confirmModal" class="btn btn-primary p-2">
                            Delete
                        </button>
                    </div>
                </div>
               
                @using (Html.BeginForm("Delete", "CollegeStudent", new { id = item.ID }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Partial("_ConfirmPopup")
                }
            </td>
        </tr>
    }

</table>

