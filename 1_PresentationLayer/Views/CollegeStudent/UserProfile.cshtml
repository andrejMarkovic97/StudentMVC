@model _1_PresentationLayer.ViewModels.CollegeStudentViewModel

@{
    ViewBag.Title = "UserProfile";
}

<h2>User Profile</h2>

@using (Html.BeginForm("Edit", "CollegeStudent"))
{
    @Html.AntiForgeryToken()
    <div>
        <hr />
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserID)
            @Html.Partial("_EditStudent")
            @Html.Partial("_EditCollegeStudent")


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @{
                        if (!Model.IsDisabled)
                        {
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#confirmModal">
                                Submit
                            </button>
                        }
                    }
                    

                    <button type="button" class="btn btn-default active" onclick="location.href='@Url.Action("Edit", "CollegeStudent", new { id = Model.UserID })'">Edit</button>

                    
                </div>
            </div>


        </div>


        @Html.Partial("_ConfirmPopup")
    </div>
}